<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash_introduction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.tees.gingerbread.myfitness.Activities.SplashPersonal">

    <TextView
        android:id="@+id/intro_personal_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Please enter your info"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Space
        android:id="@+id/intro_personal_info_space_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/intro_personal_info_text" />

    <TextView
        android:id="@+id/intro_personal_info_text_why"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_personal_info_space_2"
        android:layout_centerHorizontal="true"
        android:text="This information allows the app to create appropriate calorie goals for you." />

    <Space
        android:id="@+id/intro_personal_info_space_3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/intro_personal_info_text_why" />

    <EditText
        android:id="@+id/intro_personal_info_name_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/intro_personal_info_space_3"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/intro_personal_info_age_entry"
        android:hint="Age"
        android:layout_below="@+id/intro_personal_info_name_entry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorPrimary"/>

    <EditText
        android:id="@+id/intro_personal_info_height_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/intro_personal_info_age_entry"
        android:ems="10"
        android:hint="Height (Metres)"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/colorPrimary"/>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/intro_personal_info_activity_level"
        android:hint="Activity Level"
        android:layout_width="match_parent"
        android:layout_below="@+id/intro_personal_info_height_entry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorPrimary"/>

    <EditText
        android:id="@+id/intro_personal_info_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/intro_personal_info_activity_level"
        android:ems="10"
        android:hint="Weight (KG)"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/colorPrimary"/>

    <Space
        android:id="@+id/intro_personal_info_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/intro_personal_info_weight" />

    <Spinner
        android:id="@+id/intro_personal_info_gender_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/intro_personal_info_space"
        android:dropDownWidth="wrap_content"
        android:entries="@string/choose_gender"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/intro_personal_info_okay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:text="Next" />

</RelativeLayout>
