<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.tees.gingerbread.myfitness.Fragments.DietFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/diet_calories_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="28dp"
                android:layout_weight="0.15"
                android:text="Calories/Goal:"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <EditText
                android:id="@+id/diet_calories_entry"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_weight="0.17"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="CurrentCalories" />

            <TextView
                android:id="@+id/diet_calories_goal_slash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/calories_current"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:text="/"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <EditText
                android:id="@+id/diet_calories_goal_entry"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="CurrentCalories" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/diet_protein_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="28dp"
                android:layout_weight="0.24"
                android:text="Protein/Goal:"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <EditText
                android:id="@+id/diet_protein_entry"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.11"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="CurrentProtein" />

            <TextView
                android:id="@+id/diet_protein_goal_skash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/calories_current"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:text="/"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <EditText
                android:id="@+id/diet_protein_goal_entry"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="ProteinGoal" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/diet_food_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Enter a food and press search" />

                <ImageButton
                    android:id="@+id/food_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_search" />
            </LinearLayout>

            <ListView
                android:id="@+id/diet_food_list"
                android:layout_width="match_parent"
                android:layout_height="378dp"
                android:divider="?attr/dividerHorizontal"
                android:footerDividersEnabled="true"
                android:headerDividersEnabled="true" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
