<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.tees.gingerbread.myfitness.Fragments.DietFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/diet_calories_text"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="28dp"
                android:text="Calories/Goal:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <EditText
                android:id="@+id/diet_calories_entry"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="CurrentCalories"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/diet_calories_goal_slash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/calories_current"
                android:layout_marginTop="22dp"
                android:text="/"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <EditText
                android:id="@+id/diet_calories_goal_entry"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="CurrentCalories" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/diet_protein_text"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="28dp"
                android:layout_weight="0.03"
                android:text="Protein/Goal:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <EditText
                android:id="@+id/diet_protein_entry"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.11"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="CurrentProtein"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/diet_protein_goal_skash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/calories_current"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:text="/"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <EditText
                android:id="@+id/diet_protein_goal_entry"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:inputType="number"
                android:text="ProteinGoal"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add by food:" />

                <EditText
                    android:id="@+id/diet_food_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:ems="10"
                    android:inputType="text|textAutoCorrect|textAutoComplete"
                    android:text="Enter a food"
                    android:imeOptions="actionSearch"/>

                <ImageButton
                    android:id="@+id/food_search_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@android:drawable/ic_menu_search" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="5dp"
                android:background="@color/divider" />

            <ListView
                android:id="@+id/diet_food_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout5"
                android:divider="?attr/dividerHorizontal"
                android:elevation="-5dp"
                android:footerDividersEnabled="true"
                android:headerDividersEnabled="true" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


