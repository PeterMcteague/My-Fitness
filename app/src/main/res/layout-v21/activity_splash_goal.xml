<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash_goal"
    tools:context="uk.ac.tees.gingerbread.myfitness.Activities.SplashGoal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/intro_goal_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_marginTop="12dp"
        android:text="@string/choose_a_goal"
        android:textAlignment="viewStart"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp"
        android:text="@string/choose_goal_explanation"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.00"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/splash_button_fat"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/goal_weight_edit_30percent"
                android:contentDescription="@string/picture_weight_loss"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/lose_weight"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.00"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/splash_button_health"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:adjustViewBounds="false"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/goal_health_edit_30percent"
                android:contentDescription="@string/picture_stay_healthy"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/stay_healthy"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.00"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/splash_button_muscle"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:adjustViewBounds="false"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/goal_muscle_edit_30percent"
                android:contentDescription="@string/picture_gain_muscle"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/gain_muscle"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
